[mysqld]
# Server ID (deve ser único e diferente do primary)
server-id=2

# Relay log para replicação
relay-log=mysql-relay-bin
log_bin=mysql-bin
binlog_format=ROW

# Modo read-only (previne escritas acidentais no replica)
read_only=1
super_read_only=1

# Configurações de performance
max_connections=200
innodb_buffer_pool_size=256M

# Character set
character-set-server=utf8mb4
collation-server=utf8mb4_unicode_ci